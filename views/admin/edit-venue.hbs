<section>
    <div class="container mt-5 pt-4">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h2 class="text-center">Edit Venue</h2>
            <form action="/admin/edit-venue/{{venue._id}}" method="POST" enctype="multipart/form-data">
                <label for="">Name</label>
                <input type="text" name="Name" class="form-control" value="{{venue.Name}}">
                <label for="">Location</label>
                <input type="text" name="Location" class="form-control" value="{{venue.Location}}">
                <label for="">Capacity</label>
                <input type="text" name="Capacity" class="form-control" value="{{venue.Capacity}}">
                <label for="">Amount</label>
                <input type="text" name="Amount" class="form-control" value="{{venue.Amount}}">
                <label for="">Image</label>
                <img src="/venue-images/{{venue._id}}.jpg" style="width: 100px;height:auto" id="imgView" class="p-2">
                <input type="file" name="Image" class="form-control" onchange="viewImage(event)">
                <button type="submit" class="btn btn-success mt-4 float-right">Submit</button>
            </form>
        </div>
    </div>
    </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])

    }
</script>