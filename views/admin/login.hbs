<div class="container-fluid pt-3 mt-5">
    <div class="row">
        <div class="col-md-6 pl-5">
            <img src="—Pngtree—business male icon vector_4187852.png" alt="" class="">
        </div>
        <div class="col-md-5 mt-5 pt-5 ml-1">
            <h2 class="text-center pb-3"
                style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
                ADMIN LOGIN</h2>
            <form action="/admin/login" method="POST">
                {{#if loginErr}}
                <p class="error" style="color: red;">{{loginErr}}</p>
                {{/if}}
                <label class="">Email address</label>
                <input type="email" class="form-control" name="Email" placeholder="Enter email"><br>

                <label>Password</label>
                <input type="password" class="form-control pb-2" name="Password" placeholder="Password">
                <button type="submit" class="btn btn-success float-right mt-3">Login</button>
            </form>
        </div>
    </div>
</div>